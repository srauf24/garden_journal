gardenjournal_PRIMARY.ENV="local"

gardenjournal_SERVER.PORT="8080"
gardenjournal_SERVER.READ_TIMEOUT="30"
gardenjournal_SERVER.WRITE_TIMEOUT="30"
gardenjournal_SERVER.IDLE_TIMEOUT="60"
gardenjournal_SERVER.CORS_ALLOWED_ORIGINS="http://localhost:3000"

gardenjournal_DATABASE.HOST="localhost"
gardenjournal_DATABASE.PORT="5432"
gardenjournal_DATABASE.USER="postgres"
gardenjournal_DATABASE.PASSWORD=""
gardenjournal_DATABASE.NAME="gardenjournal"
gardenjournal_DATABASE.SSL_MODE="disable"
gardenjournal_DATABASE.MAX_OPEN_CONNS="25"
gardenjournal_DATABASE.MAX_IDLE_CONNS="25"
gardenjournal_DATABASE.CONN_MAX_LIFETIME="300"
gardenjournal_DATABASE.CONN_MAX_IDLE_TIME="300"

gardenjournal_AUTH.SECRET_KEY="secret"

gardenjournal_INTEGRATION.RESEND_API_KEY="resend_key"

gardenjournal_REDIS.ADDRESS="redis://localhost:6379"

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Service Identity
gardenjournal_OBSERVABILITY.SERVICE_NAME="gardenjournal"
gardenjournal_OBSERVABILITY.ENVIRONMENT="development"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Basic Logging Settings
gardenjournal_OBSERVABILITY.LOGGING.LEVEL="debug"
gardenjournal_OBSERVABILITY.LOGGING.FORMAT="console"
gardenjournal_OBSERVABILITY.LOGGING.SLOW_QUERY_THRESHOLD="100ms"

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================

# New Relic APM
gardenjournal_OBSERVABILITY.NEW_RELIC.LICENSE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
gardenjournal_OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED="true"
gardenjournal_OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED="true"
gardenjournal_OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING="false"

# ============================================================================
# HEALTH CHECKS CONFIGURATION
# ============================================================================

# Health Check Settings
gardenjournal_OBSERVABILITY.HEALTH_CHECKS.ENABLED="true"
gardenjournal_OBSERVABILITY.HEALTH_CHECKS.INTERVAL="30s"
gardenjournal_OBSERVABILITY.HEALTH_CHECKS.TIMEOUT="5s"
gardenjournal_OBSERVABILITY.HEALTH_CHECKS.CHECKS="database,redis"